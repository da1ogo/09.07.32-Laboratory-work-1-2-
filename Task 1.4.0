#include <iostream> // подключаем библиотеку ввода/вывода
#include <cmath> // подключаем библиотеку с математическими операциями
#define _USE_MATH_DEFINES // прописываем для использования числа пи (M_PI)

using std::cout; // подключаем вывод
using std::cin; //подключаем ввод

int main(){
    
    int ugol_rad,minuts,seconds,gradus; // создаем переменные для угла радианы,минут,секунд
    double x1,x2; // создаем переменную для разделения на целое и дробное число с помощью modf
    cout<<"Введите угол - "<<"\n"; //просим ввести угол в радианах
    cin>>ugol_rad; // присваиваем в пременную угол в радианах
    
    x1 = modf(ugol_rad * (180/M_PI),&x2);// записываем в x1 дробную часть, а в x2 целую часть от ugol_rad * (180/M_PI)
    gradus = x2;
    cout<<gradus<<"\n"; // Вывод градусов
    
    minuts = x1 * 60; // считаем кол-во минут
    cout<<minuts<<"\n";// Вывод минут
    
    x1 = modf(x1 * 60,&x2); // записываем в x1 дробную часть, а в x2 целую часть от x1 * 60
    seconds = x1 * 60; // считаем секунды
    cout<<seconds<<"\n"; // Вывод секунд
    
    printf("Угол %d радиан равен - %d градусов, %d минут, %d секунд",ugol_rad,gradus,minuts,seconds); // красиво всё выводим через printf

    return 0;
}
